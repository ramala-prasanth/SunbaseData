<!DOCTYPE html>
<html>
  <head>
    <title>Customer List</title>
    <style>
      h1 {
        color: #333;
        text-align: center;
        margin-top: 50px;
      }
      .container {
        text-align: center;
        width: 100%;
      }
      .add-button {
        text-align: center;
      }
      table {
        width: 80%;
        margin: 20px;
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        margin-top: 20px;
      }
      th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }
      th:first-child, td:first-child {
         width: 10%;
      }
      th {
        background-color: #f2f2f2;
      }
      input[type="submit"] {
        background-color: #4CAF50;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
      input[type="submit"]:hover {
        background-color: #3e8e41;
      }
    </style>
  </head>
  <body>
    <h1>Customer List</h1>
    <div class="container">
      <div class="add-button">
        <form action="/addCustomerForm" method="post">
          <input type="submit" value="Add Customer">
        </form>
      </div>
      <table>
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Street</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Edit/Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for( var index = 0; index < data.length; index++ ) { %>
             <tr>
              <td><%= data[index].first_name %></td>
              <td><%= data[index].last_name %></td>
              <td><%= data[index].street %></td>
              <td><%= data[index].address %></td>
              <td><%= data[index].city %></td>
              <td><%= data[index].state %></td>
              <td><%= data[index].email %></td>
              <td><%= data[index].phone %></td>
              <td><form action="update" method="post">
                <input type="hidden" name="uuid" value="<%= data[index].uuid %>">
                <input type="hidden" name="first_name" value="<%= data[index].first_name %>">
                <input type="hidden" name="last_name" value="<%= data[index].last_name %>">
                <input type="hidden" name="street" value="<%= data[index].street %>">
                <input type="hidden" name="address" value="<%= data[index].address %>">
                <input type="hidden" name="city" value="<%= data[index].city %>">
                <input type="hidden" name="state" value="<%= data[index].state %>">
                <input type="hidden" name="email" value="<%= data[index].email %>">
                <input type="hidden" name="phone" value="<%= data[index].phone %>">
                <input type="submit" value="Edit">
                </form>
                <br>
                <form action="delete" method="post">
                  <input type="hidden" name="uuid" value="<%= data[index].uuid %>">
                <input type="submit" value="Delete">
              </form></td>
            </tr>
          <% } %>
         <!-- Add more rows here as needed -->
        </tbody>
      </table>
    </div>
  </body>
</html>